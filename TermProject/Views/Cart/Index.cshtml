@model TermProject.ViewModels.Cart.IndexVM

<html>
<head>
    <title>Your Cart</title>
    <link href="~/site.css" rel="stylesheet" />
</head>

<body>
    <h2>Your Cart</h2>

    @if (Model.Items != null && Model.Items.Any())
    {
        foreach (var item in Model.Items)
        {
            <div>
                <!-- Display Product Details -->
                <div>Product Name: @item.ProductName</div>
                <img src="/Images/@item.ImagePath" alt="Product Image" width="300px" height="200px" />
                <div>Price: @item.ProductPrice</div>

                <!-- Delete Button -->
                <a href="/Cart/Delete?productId=@item.ProductId&&UserId=@item.UserId">Remove</a>
            </div>
        }
    }
    else
    {
        <p>Your cart is empty.</p>
    }
</body>
</html>
